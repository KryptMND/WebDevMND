<%- include("partials/header") %>

<div class="container">
    <div class="container border border-dark rounded bg-light my-5 pb-3 px-5">
        <h1><%= animal.title %></h1>
        <img id="animalimg" class="rounded mx-auto d-block" src="<%= animal.image %>">
        <span><%= animal.created.toDateString() %></span>
        <p><%- animal.body %></p>
        <a class="btn btn-outline-info" href="/animals/<%= animal._id %>/edit">Update</a>
        <form  id="delete" method="POST" action="/animals/<%= animal._id %>?_method=DELETE">
            <button class="btn btn-outline-danger">Delete</button>
        </form>
    </div>
</div>

<%- include("partials/footer") %>